<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/report_chart">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp">

                <com.jjoe64.graphview.GraphView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/graph1"
                    android:background="@drawable/for_graph"/>

            </LinearLayout>

        </RelativeLayout>

        <GridLayout
            android:id="@+id/value_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="2"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/chart"
            android:columnOrderPreserved="false"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/InsideCard"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:stretchColumns="2"
                        android:layout_marginEnd="5dp"
                        android:layout_margin="10dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                style="@style/Teks.TV"
                                android:layout_column="1"
                                android:text="Tanggal"/>
                            <TextView
                                style="@style/Teks.TV"
                                android:id="@+id/report_tanggal"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="Value"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">
                            <TextView
                                style="@style/Teks.TV"
                                android:layout_column="1"
                                android:text="Varietas"/>
                            <TextView
                                style="@style/Teks.TV"
                                android:id="@+id/report_varietas"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="Value"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">
                            <TextView
                                style="@style/Teks.TV"
                                android:layout_column="1"
                                android:text="Blok"/>
                            <TextView
                                style="@style/Teks.TV"
                                android:id="@+id/report_blok"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="Value"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">
                            <TextView
                                style="@style/Teks.TV"
                                android:layout_column="1"
                                android:text="Berat"/>
                            <TextView
                                style="@style/Teks.TV"
                                android:id="@+id/report_berat"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="Value"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">
                            <TextView
                                style="@style/Teks.TV"
                                android:layout_column="1"
                                android:text="Kadar Air"/>
                            <TextView
                                style="@style/Teks.TV"
                                android:id="@+id/report_kadarair"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="Value"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">
                            <TextView
                                style="@style/Teks.TV"
                                android:layout_column="1"
                                android:text="Proses"/>
                            <TextView
                                style="@style/Teks.TV"
                                android:id="@+id/report_proses"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="Value"/>
                        </TableRow>

                    </TableLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="87dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                android:orientation="vertical"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:id="@+id/biaya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Teks.TV"
                        android:layout_width="wrap_content"
                        android:text="Biaya" />

                     <TextView
                        android:id="@+id/report_biaya"
                        style="@style/Teks.TV"
                        android:layout_width="match_parent"
                        android:gravity="end"
                        android:text="Value" />

                </RelativeLayout>

                <Button
                    android:id="@+id/btn_detail_reportview"
                    style="@style/Teks.detail"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/btn_tosca"
                    android:text="Lihat Detail" />

            </androidx.cardview.widget.CardView>
        </GridLayout>

        <LinearLayout
            android:layout_below="@+id/value_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_kembali_reportview"
                style="@style/Teks.button"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="33dp"
                android:layout_gravity="end"
                android:text="Kembali"
                android:background="@drawable/btn_green"/>
        </LinearLayout>


    </RelativeLayout>
</ScrollView>