<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Card"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:elevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            style="@style/Teks.TV"
            android:layout_width="wrap_content"
            android:text="Tanggal" />

        <TextView
            style="@style/Teks.TV"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Varietas" />

        <TextView
            style="@style/Teks.TV"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Blok" />

        <TextView
            style="@style/Teks.TV"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Berat" />

        <TextView
            style="@style/Teks.TV"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Proses" />

        <TextView
            style="@style/Teks.TV"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Tahap" />

        <TextView
            style="@style/Teks.TV"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Biaya" />

        <TextView
            style="@style/Teks.TV"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Ubah Nominal Biaya" />

        <EditText
            android:id="@+id/edt_dp_et_biaya"
            style="@style/Teks.TV"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:inputType="numberDecimal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_dp_batal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/btn_dp_submit"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btn_batal"
                android:text="BATAL"
                />

            <Button
                android:id="@+id/btn_dp_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Button.Kirim"
                android:layout_marginEnd="0dp"
                android:padding="5dp"
                android:background="@drawable/btn_kirim"
                android:text="UPDATE"
                />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/edt_dp_tgl"
            style="@style/Teks.TV"
            android:layout_width="match_parent"
            android:gravity="end"
            android:text="Value" />

        <TextView
            android:id="@+id/edt_dp_varietas"
            style="@style/Teks.TV"
            android:layout_width="match_parent"
            android:layout_below="@id/edt_dp_tgl"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:text="Value" />

        <TextView
            android:id="@+id/edt_dp_blok"
            style="@style/Teks.TV"
            android:layout_width="match_parent"
            android:layout_below="@id/edt_dp_varietas"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:text="Value" />

        <TextView
            android:id="@+id/edt_dp_berat"
            style="@style/Teks.TV"
            android:layout_width="match_parent"
            android:layout_below="@+id/edt_dp_blok"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:text="Value" />

        <TextView
            android:id="@+id/edt_dp_proses"
            style="@style/Teks.TV"
            android:layout_width="match_parent"
            android:layout_below="@+id/edt_dp_berat"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:text="Value" />

        <TextView
            android:id="@+id/edt_dp_tahap"
            style="@style/Teks.TV"
            android:layout_width="match_parent"
            android:layout_below="@+id/edt_dp_proses"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:text="Value" />

        <TextView
            android:id="@+id/edt_dp_biaya"
            style="@style/Teks.TV"
            android:layout_width="match_parent"
            android:layout_below="@+id/edt_dp_tahap"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:text="Value" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>

