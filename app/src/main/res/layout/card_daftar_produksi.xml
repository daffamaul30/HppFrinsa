<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Card"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="6dp">

    <LinearLayout
        style="@style/InsideCard"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:stretchColumns="1"
            android:layout_marginEnd="5dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TextView
                    style="@style/Teks"
                    android:layout_column="1"
                    android:text="Tanggal"/>
                <TextView
                    style="@style/Teks.Value"
                    android:id="@+id/dp_tv_tgl"
                    android:gravity="right"
                    android:text="Value"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TextView
                    style="@style/Teks"
                    android:layout_column="1"
                    android:text="Varietas"/>
                <TextView
                    style="@style/Teks.Value"
                    android:id="@+id/dp_tv_varietas"
                    android:gravity="right"
                    android:text="Value"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TextView
                    style="@style/Teks"
                    android:layout_column="1"
                    android:text="Blok"/>
                <TextView
                    style="@style/Teks.Value"
                    android:id="@+id/dp_tv_blok"
                    android:gravity="right"
                    android:text="Value"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TextView
                    style="@style/Teks"
                    android:layout_column="1"
                    android:text="Berat"/>
                <TextView
                    style="@style/Teks.Value"
                    android:id="@+id/dp_tv_berat"
                    android:gravity="right"
                    android:text="Value"/>
            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:stretchColumns="1"
            android:layout_marginStart="5dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TextView
                    style="@style/Teks"
                    android:layout_column="1"
                    android:text="Proses"/>
                <TextView
                    style="@style/Teks.Value"
                    android:id="@+id/dp_tv_proses"
                    android:gravity="right"
                    android:text="Value"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TextView
                    style="@style/Teks"
                    android:layout_column="1"
                    android:text="Biaya"/>
                <TextView
                    style="@style/Teks.Value"
                    android:id="@+id/dp_tv_biaya"
                    android:gravity="right"
                    android:text="Value"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TextView
                    style="@style/Teks"
                    android:layout_column="1"
                    android:text="Tahap"/>
                <TextView
                    style="@style/Teks.Value"
                    android:id="@+id/dp_tv_tahap"
                    android:gravity="right"
                    android:text="Value"/>
            </TableRow>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">
                <Button
                    android:id="@+id/btn_dp_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:elevation="6dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/btn_edit"/>
                <Button
                    android:id="@+id/btn_dp_klik"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:elevation="6dp"
                    android:background="@drawable/btn_batal"/>
            </LinearLayout>
        </TableLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>




<TableRow
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="5dp"
android:layout_weight="2"
android:gravity="right">

<Button
    android:id="@+id/btn_dp_delete"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:elevation="6dp"
    android:layout_weight="1"
    android:background="@drawable/btn_edit"/>
<Button
    android:id="@+id/btn_dp_klik"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_weight="1"
    android:elevation="6dp"
    android:background="@drawable/btn_batal"/>
</TableRow>

