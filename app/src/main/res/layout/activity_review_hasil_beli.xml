<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputPanen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_panen"
            style="@style/Card"
            app:cardElevation="6dp">

            <TableLayout
                style="@style/InsideCard"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <TextView
                        style="@style/Teks"
                        android:layout_column="1"
                        android:text="@string/tanggal" />

                    <TextView
                        android:id="@+id/value_tanggal_beli"
                        style="@style/Teks.Value"
                        android:gravity="right"
                        android:text="@string/value" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <TextView
                        style="@style/Teks"
                        android:layout_column="1"
                        android:text="@string/varietas" />

                    <TextView
                        android:id="@+id/value_varietas_beli"
                        style="@style/Teks.Value"
                        android:gravity="right"
                        android:text="@string/value" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <TextView
                        style="@style/Teks"
                        android:layout_column="1"
                        android:text="@string/blok" />

                    <TextView
                        android:id="@+id/value_blok_beli"
                        style="@style/Teks.Value"
                        android:gravity="right"
                        android:text="@string/value" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <TextView
                        style="@style/Teks"
                        android:layout_column="1"
                        android:text="@string/berat" />

                    <TextView
                        android:id="@+id/value_berat_beli"
                        style="@style/Teks.Value"
                        android:gravity="right"
                        android:text="@string/value" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <TextView
                        style="@style/Teks"
                        android:layout_column="1"
                        android:text="@string/beli_dari" />

                    <TextView
                        android:id="@+id/value_kolektif_beli"
                        style="@style/Teks.Value"
                        android:gravity="right"
                        android:text="@string/value" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        style="@style/Teks"
                        android:layout_column="1"
                        android:text="@string/proses" />

                    <TextView
                        android:id="@+id/value_proses_beli"
                        style="@style/Teks.Value"
                        android:gravity="right"
                        android:text="@string/value" />
                </TableRow>

                <TextView
                    style="@style/Teks"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="@string/biaya" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <TextView
                        style="@style/Teks"
                        android:layout_column="1"
                        android:text="@string/harga_beli" />

                    <TextView
                        android:id="@+id/value_harga_beli"
                        style="@style/Teks.Value"
                        android:gravity="right"
                        android:text="@string/value" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <TextView
                        style="@style/Teks"
                        android:layout_column="1"
                        android:text="@string/ongkos_cuci" />

                    <TextView
                        android:id="@+id/value_ongkos_cuci_beli"
                        style="@style/Teks.Value"
                        android:gravity="right"
                        android:text="@string/value" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <TextView
                        style="@style/Teks"
                        android:layout_column="1"
                        android:text="@string/total_biaya" />

                    <TextView
                        android:id="@+id/value_total_biaya_beli"
                        style="@style/Teks.Value"
                        android:gravity="right"
                        android:text="@string/value" />
                </TableRow>

            </TableLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_kembali_dashboard_beli"
            style="@style/Button.Kirim"
            android:layout_below="@+id/card_panen"
            android:background="@drawable/btn_kirim"
            android:elevation="10dp"
            android:padding="5dp"
            android:text="@string/kembali" />
    </RelativeLayout>

</ScrollView>