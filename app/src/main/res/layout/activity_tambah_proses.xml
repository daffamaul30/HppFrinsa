<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    tools:context=".TambahProses">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_panen"
            style="@style/Card"
            app:cardElevation="6dp">

            <LinearLayout style="@style/InsideCard">

                <EditText
                    android:id="@+id/edt_dialog_tmbh_proses2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:hint="@string/masukkan_nama_proses_baru"
                    android:inputType="text" />

                <Spinner
                    android:id="@+id/spinner_tmbh_proses2"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_spinner2"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/urutan_tahapan_proses"
                    android:textColor="@android:color/black" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_kirim_tmbh_proses"
            style="@style/Button.Kirim"
            android:layout_below="@+id/card_panen"
            android:background="@drawable/btn_kirim"
            android:elevation="10dp"
            android:text="@string/kirim" />
    </RelativeLayout>

</ScrollView>